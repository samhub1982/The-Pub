<% provide(:title, 'Home') %>
<% if signed_in? %>
	<table class="front">
		<tr>
			<td class="main">
				<h1 class="micropost">Update status:</h1>
				<%= render 'shared/micropost_form' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/stats' %>
			</td>
		</tr>
	</table>
	<%= render 'shared/feed' %>
<% else %>
	<h1>The Pub</h1>
	<p>
		This is the future home for The Pub: A Private Social Network for 
		Friends and Family.
	</p>

	<p>
		Testing the sign up link: 
		<%= link_to "Sign up", signup_path %>
	</p>
<% end %>
